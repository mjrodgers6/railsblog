<!DOCTYPE html>
<html>
<head>
  <title>Railsblog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <header>
    <% if current_user %>
      <ul>
        <li><%= link_to "Sign Out", '/logout', method: :delete %></li>
        <li><%= link_to "All Profiles", profiles_path %></li>
        <li><%= link_to "MY Profile", profile_path(current_user.id) %></li>
        <li><%= link_to "Edit Profile", edit_profile_path(current_user.id) %></li>
        <li><%= link_to "All Users", users_path %></li>
        <li><%= link_to "All Posts", posts_path %></li>
        <li><%= link_to "Create New Post", new_post_path %></li>
      </ul>
    <% else %>
      <%= form_tag '/sessions' do%>
        <%= text_field_tag :username, nil, placeholder: "Username" %>
        <%= password_field_tag :password, nil, placeholder: "Password" %>
        <%= submit_tag "Log In" %>
        <ul>
          <li><%= link_to "Sign up", user_path(:new) %></li>
        </ul>
      <% end %>
    <% end %>
 

  <% if flash[:alert] %>
    <%= flash[:alert] %>
  <%end%>
 </header>

<%= yield %>
</body>
</html>

