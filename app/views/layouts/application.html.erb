<!DOCTYPE html>
<html>
<head>
  <title>Railsblog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <header>
    <% if current_user %>
      <%= link_to "Sign Out", '/logout', method: :delete %>
      <%= link_to "All Profiles", profiles_path %>
      <%= link_to "Update Profile", edit_profile_path(current_user.id) %>
      <%= link_to "All Users", users_path %>
      <%= link_to "All Posts", posts_path %>
      <% if current_user %>
      <%= link_to "Create New Post", new_post_path %>
<% end %>
    <% else %>
      <%= form_tag '/sessions' do%>
        <%= text_field_tag :username, nil, placeholder: "Username" %>
        <%= password_field_tag :password, nil, placeholder: "Password" %>
        <%= submit_tag "Log In" %>
        <%= link_to "Sign up", user_path(:new) %>
      <% end %>
    <% end %>
 

  <% if flash[:alert] %>
    <%= flash[:alert] %>
  <%end%>
 </header>

<%= yield %>
</body>
</html>

